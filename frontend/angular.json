{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "puffer": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/puffer",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss",
              {
                "input": "src/themes/arya/arya-blue.css",
                "bundleName": "arya-blue",
                "inject": false
              },
              {
                "input": "src/themes/arya/arya-green.css",
                "bundleName": "arya-green",
                "inject": false
              },
              {
                "input": "src/themes/arya/arya-orange.css",
                "bundleName": "arya-orange",
                "inject": false
              },
              {
                "input": "src/themes/arya/arya-purple.css",
                "bundleName": "arya-purple",
                "inject": false
              },
              {
                "input": "src/themes/fluent-light/theme.css",
                "bundleName": "fluent-light",
                "inject": false
              },
              {
                "input": "src/themes/material/md-dark-deeppurple.css",
                "bundleName": "md-dark-deeppurple",
                "inject": false
              },
              {
                "input": "src/themes/material/md-dark-indigo.css",
                "bundleName": "md-dark-indigo",
                "inject": false
              },
              {
                "input": "src/themes/material/md-light-deeppurple.css",
                "bundleName": "md-light-deeppurple",
                "inject": false
              },
              {
                "input": "src/themes/material/md-light-indigo.css",
                "bundleName": "md-light-indigo",
                "inject": false
              },
              {
                "input": "src/themes/material/mdc-dark-deeppurple.css",
                "bundleName": "mdc-dark-deeppurple",
                "inject": false
              },
              {
                "input": "src/themes/material/mdc-dark-indigo.css",
                "bundleName": "mdc-dark-indigo",
                "inject": false
              },
              {
                "input": "src/themes/material/mdc-light-deeppurple.css",
                "bundleName": "mdc-light-deeppurple",
                "inject": false
              },
              {
                "input": "src/themes/material/mdc-light-indigo.css",
                "bundleName": "mdc-light-indigo",
                "inject": false
              },
              {
                "input": "src/themes/saga/saga-blue.css",
                "bundleName": "saga-blue",
                "inject": false
              },
              {
                "input": "src/themes/saga/saga-green.css",
                "bundleName": "saga-green",
                "inject": false
              },
              {
                "input": "src/themes/saga/saga-orange.css",
                "bundleName": "saga-orange",
                "inject": false
              },
              {
                "input": "src/themes/saga/saga-purple.css",
                "bundleName": "saga-purple",
                "inject": false
              },
              {
                "input": "src/themes/tailwind-light/theme.css",
                "bundleName": "tailwind-light",
                "inject": false
              }
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "puffer:build:production"
            },
            "development": {
              "browserTarget": "puffer:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "puffer:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    }
  }
}
